//Instantiate new game with timer for players to join by sending addPlayerToGame request.
//Broadcast new game open to join for 15 seconds.
{"action" : "startNewGame"}

{
    "action" : {
        "addPlayerToGame" : {
            "playerName" : "playerName",
            "playerCharacter" : "playerCharacter"
        }
    }
}

{
    "action" : {
        "addRandomCreatureToGame" :{
            "creatureName" : "creatureName",
            "creatureType" : "creatureType"
        }
    }
}

{
    "action" : {
        "setInitiative" : {
            "playerName" : "playerName",
            "initiativeRoll" : int
        }
    }
}

//Runs combat and broadcasts battleReport
{
    "action" : {
        "attack" : {
            "playerName" : "playerName",
            "targetName" : "targetName",
            "attackRoll" : int,
            "damageRoll" : int
        }
    }
}

//Returns scoreCard only to sender
{ "action" : "displayScoreCard" }


















